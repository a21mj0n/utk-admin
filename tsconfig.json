{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "#shared/*": [
        "src/shared/*"
      ],
      "#modules/*": [
        "src/modules/*"
      ],
      "#pages/*": [
        "src/views/pages/*"
      ],
      "#services/*": [
        "src/shared/services/*"
      ],
      "#routes/*": [
        "src/app/routes/*"
      ]
    },
    "types": [
      "node",
      "vite/client"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.scss"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}